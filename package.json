{
  "name": "novsy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "predev": "node scripts/guard-prisma.js && node scripts/guard-next.js",
    "dev": "next dev -p 3005",
    "dev:reset": "node scripts/dev-reset.mjs",
    "db:reset": "prisma migrate reset --force --skip-seed --skip-generate && prisma generate",
    "db:reset:seed": "prisma migrate reset --force --skip-seed --skip-generate && prisma generate && prisma db seed",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "smoke": "node scripts/smoke-api.mjs",
    "diagnose": "npm run lint && npm run typecheck && npm run build && npm run smoke",
    "dev:clean": "node scripts/clean-next.js && next dev -p 3005",
    "clean": "node scripts/clean-next.js",
    "clean:next": "node scripts/clean-next.js",
    "build": "next build",
    "start": "next start",
    "lt:up": "docker compose -f docker-compose.libretranslate.yml up -d",
    "lt:down": "docker compose -f docker-compose.libretranslate.yml down",
    "lt:logs": "docker compose -f docker-compose.libretranslate.yml logs -f"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@prisma/client": "6.19.0",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "formidable": "^3.5.1",
    "next": "12.2.5",
    "prisma": "6.19.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "^2.3.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/formidable": "^3.4.6",
    "@types/node": "18.7.5",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.8",
    "eslint": "8.22.0",
    "eslint-config-next": "13.5.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "5.4.5"
  }
}
