# Database (SQLite)
DATABASE_URL=file:./prisma/dev.db

# App URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3005

# Creator defaults
CREATOR_ID=creator-1
NEXT_PUBLIC_CREATOR_ID=creator-1

# Fans data source
FANS_SOURCE=db

# OpenAI / AI mode
OPENAI_API_KEY=
NEXT_PUBLIC_OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
AI_MODE=live

# Watchpack (Windows watcher tweaks - prefer .env.local)
WATCHPACK_POLLING=
WATCHPACK_POLL_INTERVAL=1000
NEXT_WATCH_POLL=

# Runtime
NODE_ENV=development
